@model IEnumerable<OrganisEasy.Server.Models.Habit>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Icon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompletedToday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyCheckIns)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCheckIns)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Streak)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastCheckInDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Icon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCompletedToday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonthlyCheckIns)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCheckIns)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Streak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastCheckInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
